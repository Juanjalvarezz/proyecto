<!DOCTYPE html>
<html>
    <head>
        <title>Equipos</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/styleinicio.css' />

        <link rel="icon" href="/image/LOGO-RIF-1.png" type="png" size=20px>
    </head>
    <body>
        <div class="barra">
            <a href="/espacios"><img class="inf" src="/image/espacios.png" ></img></a> 
            <a href="/personal_tecnico"><img class="inf" src="/image/pt.png" ></img></a> 
            <a href="/reservas"><img class="inf" src="/image/reserva.png" ></img></a> 
            <a href="/solicitantes"><img class="inf" src="/image/solicitante.png" ></img></a> 
            <a href="/trabajos"><img class="inf" src="/image/trabajo.png" ></img></a> 
            <a href="/"><img class="inf" src="/image/salir.png"></img></a>
        </div>


        <div style="margin-left: 4cm;">
            <h1>Equipos</h1>
            <a href="/equipos/createeq"><button style="height: 1.5cm;"><img src="/image/add-to-queue-solid-72.png" alt="Agregar" style="width: 1cm; height: 1cm;"> </button></a>    
            <table>
            <thead>
                <tr>
                    <th class="id"><h3>Id</h3></th>
                    <th class="serial"><h3>Serial</h3></th>
                    <th class="nombre"><h3>Nombre</h3></th>
                    <th class="descripcion"><h3>Descripcion</h3></th>
                    <th class="fecha"><h3>Fecha de Adquisicion</h3></th>
                    <th class="estatus"><h3>Estatus</h3></th>
                    <th><h3>Acciones</h3></th>
                </tr>
            </thead>
            <tbody>
                <% respuesta.forEach(r => { %>
                    <tr>
                        <td><%=r.id_equipo  %></td>
                        <td><%= r.serial  %></td>
                        <td><%= r.nombre  %></td>
                        <td><%= r.descripcion  %></td>
                        <td><%= r.fecha_de_adquisicion.toLocaleDateString()%></td>
                        <td><%= r.estatus  %></td>
                        <td>
                            <a href="/equipos/editeq/<%= r.id_equipo %>"><button style="height: 1.3cm;"><img src="/image/edit-alt-solid-24.png" alt="Agregar" style="width: 1cm; height: 1cm;"> </button></a>    
                            <a href="/equipos/eraseeq/<%= r.id_equipo %>"><button style="height: 1.3cm;"><img src="/image/eraser-solid-72.png" alt="Delete" style="width: 1cm; height: 1cm;"> </button></a>    
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
    </body>
</html>